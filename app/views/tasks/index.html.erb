<h1>Task List</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.details %></td>
        <td><%= task.completed ? 'Completed' : 'Not Completed' %></td>
        <td><%= link_to 'Show', task_path(task) %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task_path(task), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        <td> <%= check_box_tag "completed_task_#{task.id}", 1, task.completed, class: "task-checkbox", data: { task_id: task.id } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
